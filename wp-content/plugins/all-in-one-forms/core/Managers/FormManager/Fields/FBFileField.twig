{% extends "core/Managers/FormManager/Fields/FBFieldBase.twig" %}
{# @var Model \rednaoeasycalculationforms\core\Managers\FormManager\Fields\FBFileField #}
{% block content %}
    {% for currentItem in Model.GetItems(Context) %}
        <div>
            {% if currentItem.IsImage %}
                <img style="width: 100%" src="{{ currentItem.URL }}"/>
            {% else %}
                <a target="_blank" href="{{ currentItem.URL }}">{{ currentItem.Label }}</a>
            {% endif %}
        </div>

    {% endfor %}

{% endblock %}